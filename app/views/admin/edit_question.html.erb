<% @page_title= "admin | edit question" %>

<h1 class="mrg_head">Edit question</h1>

<div class="wrap">
<%= form_for :question, :url => {:action => 'update_question', :id => @question.id} do |f| %>
	
	<%= label_tag(:question, "Question: ") %> <br/>
	<%= f.text_area(:question  , :size => "100x10") %>
	<br/><br/>

	<%= label_tag(:explanation, "Explanation: ") %> <br />
	<%= f.text_area(:explanation, :size => "100x20") %>
	<br/><br/>

	<%= label_tag(:image, "image: ") %> <br />
	<%= f.file_field(:image) %>

	<br /><br />

	<%= f.submit("Save") %>

<% end %>
</div>