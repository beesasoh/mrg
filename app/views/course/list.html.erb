<h1>List of all tests</h1>

<table width="60%">
	<tr>
		<th>Title</th>
		<th>Subject</th>
		<th>Author</th>
		<th>Questions</th>
	</tr>

	<% @courses.each do |course| %>
		<tr>
			<td><%= course.title %></td>
			<td><%= course.subject.name %></td>
			<td><%= course.author.name %></td>
			<td align="center"><%= course.num_questions %></td>
		</tr>
	<% end %>

</table>

<br />

<%= link_to("Add new test", :action => 'new') %>

