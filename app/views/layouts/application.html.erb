<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title || "My revision guide"%></title>
  <%= favicon_link_tag 'fav.ico' %>
  <%= stylesheet_link_tag  "application", :media => "all" %>
  <%= stylesheet_link_tag  "http://fonts.googleapis.com/css?family=Alef", :media => "all" %>
  <%= stylesheet_link_tag  "http://fonts.googleapis.com/css?family=Marmelad", :media => "all" %>
  <%= stylesheet_link_tag  "http://fonts.googleapis.com/css?family=Open+Sans:400,600", :media => "all" %>
