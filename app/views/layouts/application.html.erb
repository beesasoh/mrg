          <div class = "link">   <a href="#" id= "sb-u-link">view profile</a> </div>
      </div>
      <div class="clear-fix"></div>
    </div>
  </div>
<div id="wrapper">
    <div id="fixed-right-side-bar">
      <%= render :partial => 'layouts/side_bar', :locals => {:user => current_user} %>
    </div>

    <div id="mrg-main">
        <div id="mrg-page">
            <%= render :partial => "layouts/head" , :locals => {:user => current_user}  %>   
            <div id="top-info">

            </div>
            <div id="mrg-content">
                 <%= yield %>
            </div>
