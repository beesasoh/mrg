<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title || "My revision guide"%></title>
  <%= stylesheet_link_tag  "application", :media => "all" %>
  <%= stylesheet_link_tag  "http://fonts.googleapis.com/css?family=Alef", :media => "all" %>
  <%= stylesheet_link_tag  "http://fonts.googleapis.com/css?family=Marmelad", :media => "all" %>
  <%= stylesheet_link_tag  "http://fonts.googleapis.com/css?family=Open+Sans:400,600", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrapper">
    <div id="fixed-right-side-bar">
      <%= render :partial => 'layouts/side_bar', :locals => {:user => current_user} %>
    </div>

    <div id="mrg-main">
        <div id="mrg-page">
            <%= render :partial => "layouts/head" , :locals => {:user => current_user}  %>   
            <div id="top-info">

            </div>
            <div id="mrg-content">
                 <%= yield %>
            </div>
        </div>
    </div>
</div>


</body>
</html>