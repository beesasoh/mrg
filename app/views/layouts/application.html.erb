<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title || "My revision guide"%></title>
  <%= stylesheet_link_tag  "application", :media => "all" %>
  <%= stylesheet_link_tag  "http://fonts.googleapis.com/css?family=Alef", :media => "all" %>
  <%= stylesheet_link_tag  "http://fonts.googleapis.com/css?family=Marmelad", :media => "all" %>
  <%= stylesheet_link_tag  "http://fonts.googleapis.com/css?family=Open+Sans:400,600", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <script type="text/javascript">

  $(document).ready(function() {
    $.ajaxSetup({ cache: true });
    $.getScript('//connect.facebook.net/en_UK/all.js', function(){
        FB.init({
          appId: '462973483793316',
          frictionlessRequests : true,
          channelUrl: '//localhost:3000/channel.html',
        });
      });     
      
      $("li.fb-inv").click(function(){
        uid = $(this).attr('name')
        $(this).fadeOut();
          FB.ui(
            {
             method: 'apprequests',
             message: 'come and see this good app' ,
             to: uid
            },
            function(response) {
              
            }
          );
      });

      $(".side-bar-item").niceScroll();
  });

  

</script>

</head>
<body>
  <div id="fb-root"></div>
<div id="wrapper">
    <div id="fixed-right-side-bar">
      <%= render :partial => 'layouts/side_bar', :locals => {:user => current_user} %>
    </div>

    <div id="mrg-main">
        <div id="mrg-page">
            <%= render :partial => "layouts/head" , :locals => {:user => current_user}  %>   
            <div id="top-info">

            </div>
            <div id="mrg-content">
                 <%= yield %>
            </div>
        </div>
    </div>
</div>


</body>
</html>