<h1>Edit subject</h1>

<div class="form form_edit_subject">

 <%= render(:partial => 'shared/error_message', :locals => {:object => @subject}) %>
<%= form_for :subject, 
			  :url => {:action => 'update',:id => @subject.id}, 
			  :html => { :multipart => true } do |f| %>
  
  <%= label_tag(:name, 'Name: ') %>
  <%= f.text_field(:name) %>

  <br /><br />

  <%= label_tag(:image_thumb, 'Subject thumbnail: ') %>
  <%= f.file_field :image_thumb %>

   <br /><br />
  <%= f.submit("Edit subject") %>
<% end %>

</div>
